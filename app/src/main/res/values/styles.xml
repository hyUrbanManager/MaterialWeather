<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--设置starting windows 背景-->
    <style name="FirstTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@mipmap/first_backpng</item>
    </style>

    <!--material 主题-->
    <style name="SunnyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- toolbar（actionbar）颜色 -->
        <item name="colorPrimary">@color/l_primary</item>
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">@color/l_primary_dark</item>
        <!-- 窗口的背景颜色 -->
        <item name="android:windowBackground">@color/white</item>
        <!--选中颜色-->
        <item name="colorAccent">@color/l_accent</item>
        <item name="android:colorFocusedHighlight">@color/l_primary_light</item>
        <item name="divider">@color/l_divider</item>
        <item name="icon">@color/l_icons</item>
        <item name="android:textColorPrimary">@color/l_primary_text</item>
        <item name="android:textColorSecondary">@color/l_secondary_text</item>
    </style>

    <style name="RainnyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- toolbar（actionbar）颜色 -->
        <item name="colorPrimary">@color/d_primary</item>
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">@color/d_primary_dark</item>
        <!-- 窗口的背景颜色 -->
        <item name="android:windowBackground">@color/white</item>
        <!--选中颜色-->
        <item name="colorAccent">@color/d_accent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--普通的文本样式-->
    <style name="normal_text">
        <item name="android:textSize">@dimen/Material_article_button</item>
        <item name="android:text">我的普通文本样式</item>
        <item name="android:textColor">@color/normal_text_color</item>
    </style>

    <!--Material 距离-->
    <style name="material_padding">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <!--两个包含-->
    <style name="normal_text_and_material_padding" parent="normal_text">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <!--AlertDialog样式-->
    <style name="myAlertDialog" parent="@android:style/Theme.Material.Light.Dialog.Alert">
    </style>

    <style name="MySearchViewStyle"></style>

</resources>
