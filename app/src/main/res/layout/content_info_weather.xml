<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackgroundBorderless"
    android:layout_marginTop="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <TextView
            android:id="@+id/deadTmp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="温度："
            android:textColor="@color/l_primary_text"
            android:visibility="gone"
            android:textSize="@dimen/Material_small_title" />

        <LinearLayout
            android:id="@+id/deadLin1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/deadTmp"
            android:layout_marginTop="0dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="今天"
                android:textColor="@color/l_primary_text"
                android:textSize="@dimen/Material_small_title" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="明天"
                android:textColor="@color/l_primary_text"
                android:textSize="@dimen/Material_small_title" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="后天"
                android:textColor="@color/l_primary_text"
                android:textSize="@dimen/Material_small_title" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/deadLin2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/deadLin1"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/todayTmp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="24/15\u2103"
                android:textColor="@color/l_primary_text"
                android:textSize="@dimen/Material_large_title" />

            <TextView
                android:id="@+id/tomorrowTmp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="24/15\u2103"
                android:textColor="@color/l_primary_text"
                android:textSize="@dimen/Material_large_title" />

            <TextView
                android:id="@+id/afterTomorrowTmp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="24/15\u2103"
                android:textColor="@color/l_primary_text"
                android:textSize="@dimen/Material_large_title" />

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:visibility="gone"
            android:src="@drawable/ic_local_cafe_black_24dp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>