<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_alarm"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackgroundBorderless"
    android:layout_marginTop="8dp">

    <LinearLayout
        android:background="@drawable/alarm_background"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="山东省青岛市气象台发布大风蓝色预警"
            android:textColor="@color/l_primary_text"
            android:textSize="@dimen/Material_small_title" />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/jingweidu"
            android:layout_marginTop="8dp"
            android:text="青岛市气象台2016年08月29日15时24分继续发布大风蓝色预警信号：预计今天下午到明天，我市北风风力海上6到7级阵风9级，陆地4到5阵风7级，请注意防范。"
            android:textColor="@color/l_secondary_text"
            android:textSize="@dimen/Material_article_button" />

    </LinearLayout>
</android.support.v7.widget.CardView>