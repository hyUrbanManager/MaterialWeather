<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image"
        android:src="@drawable/background3"
        android:scaleType="centerCrop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/cityNameZN"
        style="@style/normal_text"
        android:textSize="@dimen/Material_app_bar"
        android:text="中国 - 北京 - 北京 "
        android:layout_below="@+id/image"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/cityNameEN"
        style="@style/normal_text"
        android:textSize="@dimen/Material_app_bar"
        android:text="china - beijing - beijing"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/cityNameZN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_below="@+id/cityNameEN"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_alignRight="@+id/image"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/lon"
            style="@style/normal_text"
            android:text="经度 lon:126.1"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/lat"
            style="@style/normal_text"
            android:text="维度 lat: 139.9"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


</RelativeLayout>