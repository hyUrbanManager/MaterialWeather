<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackgroundBorderless"
    android:layout_marginTop="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <TextView
            android:id="@+id/jingweidu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="经度：116.3   纬度：39.6 "
            android:textColor="@color/l_primary_text"
            android:textSize="@dimen/Material_article_button" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/jingweidu"
            android:layout_marginTop="8dp"
            android:text="更新时间：2017.3.4 19:44"
            android:textColor="@color/l_secondary_text"
            android:textSize="@dimen/Material_article_button" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_place_black_24dp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>